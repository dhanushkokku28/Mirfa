{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm --filter @mirfa/api... build",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": [
        "packages/crypto/dist/**",
        "packages/crypto/package.json"
      ]
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ]
}
